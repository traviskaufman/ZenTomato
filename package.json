{
  "name": "zentomato",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/core": "^10.0.17",
    "@emotion/css": "^10.0.27",
    "@rescript/react": "^0.10.3",
    "@ryyppy/rescript-promise": "^2.1.0",
    "bs-css-emotion": "^4.0.1",
    "bs-webapi": "^0.19.1",
    "emotion-theming": "^10.0.19",
    "focus-visible": "^5.0.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.2",
    "recoil": "^0.5.2",
    "rescript-notifications": "^0.0.24",
    "rescript-recoil": "^3.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run re:build && react-scripts build",
    "re:build": "rescript",
    "re:start": "rescript build -w",
    "test": "npm run build && npm run test:e2e",
    "test:e2e": "export ZT_E2E_TEST_PORT=$(get-port); export ZT_E2E_TEST_URL=http://localhost:$ZT_E2E_TEST_PORT; start-server-and-test test:e2e:start-server $ZT_E2E_TEST_URL test:e2e:run-tests",
    "test:e2e:start-server": "http-server -s -p $ZT_E2E_TEST_PORT build",
    "test:e2e:run-tests": "jest e2e-tests --config=jest.config.e2e.js -i",
    "eject": "react-scripts eject",
    "deploy": "npm build && firebase deploy"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "get-port-cli": "^2.0.0",
    "http-server": "^0.11.1",
    "jest": "^24.9.0",
    "jest-puppeteer": "^4.3.0",
    "puppeteer": "^1.20.0",
    "rescript": "^9.1.4",
    "start-server-and-test": "^1.10.5"
  }
}
